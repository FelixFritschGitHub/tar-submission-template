% ======================
% III: Referencing
% ======================
\RequirePackage[authordate, natbib, maxbibnames=99, maxcitenames=2,  citetracker=true, backend=biber,giveninits, isbn=false, doi=false, uniquename=mininit]{biblatex-chicago} % sorting=nty

\setlength\bibitemsep{0pt} % \baselineskip make space line between reference items 
\DeclareFieldFormat[article]{title}{#1} 
\AtEveryCitekey{\ifciteseen{}{\defcounter{maxnames}{5}}}

\DeclareNameWrapperFormat{labelname:poss}{#1's}

\newrobustcmd*{\posscitealias}{%
  \AtNextCite{%
    \DeclareNameWrapperAlias{labelname}{labelname:poss}}}

\newrobustcmd*{\posscite}{%
  \posscitealias
  \textcite}

\newrobustcmd*{\Posscite}{\bibsentence\posscite}

\newrobustcmd*{\posscites}{%
  \posscitealias
  \textcites}